      },
      {
        "type": "range",
        "id": "timer_font_size",
        "min": 10,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Font Size (Countdown Timer)",
        "default": 24
      },
      {
        "type": "text",
        "id": "countdown_end_time",
        "label": "Countdown End Time (DD/MM/YYYY HH:mm:ss)",
        "default": "31/12/2025 23:59:59"
      },
      {
        "type": "text",
        "id": "ended_message",
        "label": "Sale Ended Message",
        "default": "Sale ended"
      }
    ],
    "presets": [
      {
        "name": "Sale Banner Countdown",
        "category": "Custom"
      }
    ]
  }
{% endschema %}
